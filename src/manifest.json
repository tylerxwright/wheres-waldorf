{
    "manifest_version": 2,

    "name": "Where's Waldorf",

    "browser_action": {
        "default_icon": "images/icon_16.png",
        "default_title": "Where's Waldorf",
        "default_popup": "html/popup.html"
    },

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["js/main.bundle.js"],
            "css": ["css/style.css"],
            "run_at": "document_idle"
        }
    ],

    "background": {
        "scripts": ["js/eventPage.bundle.js"],
        "persistent": false
    },

    "icons": {
        "16": "images/icon_16.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
    },

    "web_accessible_resources": [
        "images/waldorf.png"
    ],

    "permissions": [
        "storage"
    ]
}